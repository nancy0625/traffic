<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mad.trafficclient"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.mad.trafficclient.App"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.mad.trafficclient.activity.Activity_Main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--
            <activity
            android:name="com.mad.trafficclient.activity.Activity_Main"
            android:label="@string/app_title" />
        -->
        <activity
            android:name="com.mad.trafficclient.activity.Activity_Login"
            android:label="@string/app_title" />
        <activity
            android:name="com.mad.trafficclient.activity.Activity_Reg"
            android:label="@string/app_title" />

        <service
            android:name="com.mad.trafficclient.MyService"
            android:enabled="true"
            android:exported="true" />
        <!-- <service android:name="com.mad.trafficclient.service.YuzhiService" /> -->

        <provider
            android:name="com.android.tools.fd.runtime.InstantRunContentProvider"
            android:authorities="com.mad.trafficclient.com.android.tools.fd.runtime.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>