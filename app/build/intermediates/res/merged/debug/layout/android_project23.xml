                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="3.0dip"
                    android:gravity="right"
                    android:text="距离" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
